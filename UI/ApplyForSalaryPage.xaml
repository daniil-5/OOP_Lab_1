<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP_Lab_1.UI.ApplyForSalaryPage">
    <ContentPage.Content>
            <StackLayout Padding="20" Spacing="10">
                <Label Text="Apply for Salary Project" FontSize="24" HorizontalOptions="Center" />

                <Label Text="{Binding StatusMessage}" 
                       FontSize="Medium" 
                       TextColor="Red" 
                       HorizontalOptions="Center" 
                       Margin="0,20,0,0" />

                <Button Text="Apply" 
                        Command="{Binding ApplyCommand}" 
                        BackgroundColor="#007BFF" 
                        TextColor="White" 
                        FontAttributes="Bold" 
                        CornerRadius="10" 
                        Margin="0,20,0,0" />
            </StackLayout>
    </ContentPage.Content>
</ContentPage>