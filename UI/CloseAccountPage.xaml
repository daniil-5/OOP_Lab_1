<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOP_Lab_1.UI.CloseAccountPage"
             Title="Close Account">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">
            <Label Text="Select an account to close:" FontAttributes="Bold" />
            <Picker x:Name="AccountsPicker"/>
            <Button Text="Close Account" Clicked="OnCloseAccountClicked" HorizontalOptions="FillAndExpand" />
            <Button Text="Cancel" Clicked="OnCancelClicked" HorizontalOptions="FillAndExpand" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>